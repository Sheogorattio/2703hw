@using _2703hw.ViewModels

@model BookViewModel

<h2>Add book</h2>

<form asp-action="Add" method="post">
	<div class="form-group">
		<label class="control-label">Title</label>
		<input name="Title" class="form-control" value="@Model?.Title"/>
	</div>
	<div class="form-group">
		<label class="control-label">Author</label>
		<input name="Author" class="form-control" value="@Model?.Author" />
	</div>
	<div class="form-group">
		<label class="control-label">Genre</label>
		<input name="Genre" class="form-control" value="@Model?.Genre" />
	</div>
	<div class="form-group">
		<label class="control-label">Year</label>
		<input name="Year" class="form-control" value="@Model?.Year" />
	</div>
	<div class="form-group">
		<input type="submit" value="Add" class="btn btn-primary"/>
	</div>
</form>